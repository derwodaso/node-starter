{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "lib": ["es2015"],
        "noImplicitAny": false,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "exclude": [
        "node_modules/**/*"
    ],
    "include": [
        "src/**/*"
    ]
}